<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Login</title>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&family=Rubik:ital,wght@0,300..900;1,300..900&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Rubik", sans-serif;
        }

        .userInput-Side {
            /* background-color: rgb(164, 94, 94); */
            width: 50%;
            height: 100vh;
            display: flex;
            align-items: center;
        }

        .user-avatar img{
            width: 30%;
            display: block;
            margin: auto;
        }

        .userInput-Side form {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            width: 70%;
            /* background-color: #ffff00; */
            padding: 2rem 1rem;
            margin:auto;
            border-radius: 10px;
            box-shadow: 0px 0px 3px 0px;
        }

        .userInput-Side form input {
            padding: 10px;
            outline: none;
            border-radius: 5px;
            border: none;
            width: 100%;
            box-shadow: 0px 0px 3px 0px inset;
        }

        .submitB-ForgotB{
           display: flex;
           justify-content: space-between;
           align-items: center;
        }

        .submitB-ForgotB button{
            padding: 0.5rem 1rem;
            border: none;
            background-color: black;
            color: white;
            border-radius: 5px;
            cursor: pointer;
        }

        .submitB-ForgotB a{
            font-size: 0.7rem;
        }

        .loginGraphics{
            /* background-color: brown; */
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            width: 50%;
        }

        .loginGraphics img{
            width: 70%;
        }

        .loginPage {
            /* background-color: aqua; */
            display: flex;
            width: 80vw;
            margin-left: auto;
        }


        @media(width <= 900px){
            .loginPage{
                width: 100vw;
            }
            .userInput-Side form{
                margin-top: 7rem;
            }
        }

        @media (width <= 800px){
            .loginGraphics img{
                display: none;
            }
            .loginGraphics{
                width: 0;
            }

            .userInput-Side{
                width: 100%;
            }
        }


        @media(width <= 500px){
            .userInput-Side form{
                width: 90%;
            }
        }

    </style>
</head>

<body>
    <%-include('./partials/sideMenuBar') %>
    <div class="loginPage">
        <div class="userInput-Side">
            <form action="/user/signin" method="post">
                <div class="user-avatar">
                    <img src="/images/user.png" alt="">
                </div>
                <h2 style="text-align: center; margin-bottom: 1rem;">Welcome Back</h2>
                <div class="email-Input">
                    <label for="email">Email</label>
                    <br>
                    <input type="email" name="email" id="email" placeholder="Enter Email" required>
                </div>

                <div class="password-Input">
                    <label for="password">Password</label>
                    <br>
                    <input type="text" name="password" id="password" placeholder="Enter Password" required>
                </div>
                <div class="submitB-ForgotB">
                    <button type="submit">Submit</button>
                    <a href="/user/signup">New user? create an account</a>
                </div>
            </form>
        </div>
        <div class="loginGraphics">
            <img src="/images/loginpage.jpg" alt="">
        </div>
    </div>
</body>

</html>